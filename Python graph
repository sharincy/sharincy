import matplotlib.pyplot as plt
x = [1,2,3]
y = [10,20,30]

plt.xlabel("name X",color='r')
plt.ylabel("name Y",color='g')
plt.title("Full XY",color='b')
plt.bar(x,y,color="r",alpha=0.4,label="XY") #xy
plt.legend(loc ='upper right')
plt.show()

